    <section class="pt-5">
      <div class="formulir-margin">
        <h1 class="title-text fw-bold text-uppercase mb-5 text-center">register your account</h1>
        <form class="content-form d-flex col flex-column mx-5" method="post" action="/register">
          <div class="d-flex align-items-center flex-column mb-3">
            <div class="name">
              <label class="pb-2 fw-bold"> Name </label><br />
              <input id="name-id" name="name" class="name-box shadow p-3 mb-4 bg-body rounded" type="text" />
            </div>

            <div class="email">
              <label class="pb-2 fw-bold"> Email </label><br />
              <input id="email-id" name="email" class="email-box shadow p-3 mb-4 bg-body rounded" type="email" />
            </div>

            <div class="password">
              <label class="pb-2 fw-bold"> Password </label><br />
              <input id="password-id" name="password" class="password-box shadow p-3 mb-4 bg-body rounded" type="password" />
            </div>

            <div class="btn-submit">
              <button class="btn-submit btn btn-dark rounded-pill">submit</button>
            </div>
          </div>
        </form>
      </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
