    <nav class="navbar px-5 navbar-expand-lg" style="background-color: rgb(244, 243, 243)">
      <div class="container-fluid gap-5">
        <a class="navbar-brand" href="#"><img src="/assets/img/dumbways-id-tangerang-logos-idycziPVBN-removebg-preview.png" alt="logo" style="height: 50px" /></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active home-btn" aria-current="page" href="/home"><button class="btn btn-light">Home</button></a>
