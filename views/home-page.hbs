<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Home Page</title>
    <link rel="stylesheet" href="assets/css/body.css" />
    <link rel="stylesheet" href="assets/css/navbar.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  </head>
  <body style="background-color: rgb(226, 230, 234)">

    <nav class="navbar px-5 navbar-expand-lg" style="background-color: rgb(244, 243, 243)">
      <div class="container-fluid gap-5">
        <a class="navbar-brand" href="#"><img src="/assets/img/dumbways-id-tangerang-logos-idycziPVBN-removebg-preview.png" alt="logo" style="height: 50px" /></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active home-btn" aria-current="page" href="/home"><button class="btn btn-light">Home</button></a>
            </li>
            <li class="nav-item">
              <a class="nav-link active project-btn" aria-current="page" href="/project-page"><button class="btn btn-light">Add Project</button></a>
            </li>
          </ul>

          <div class="right">
            {{#if isLogin}}
              <a class="text-decoration-none" href="#">Hello, {{user}}</a>
              <a class="mx-5" href="/logout"><button class="btn btn-light">Logout</button></a>
            {{else}}
              <a href="/register"><button class="btn btn-light">Register</button></a>
              <a class="mx-5" href="/login"><button class="btn btn-light">Login</button></a>
            {{/if}}
            <a href="/contact-page"><button class="btn btn-dark">Contact Me</button></a>
          </div>
        </div>
      </div>
    </nav>

    <section>
      <div class="background-margin" style="background-color: rgb(225, 229, 233)">
        <div class="margin-card p-5">
          <div class="container">
            <div class="row">
              <div class="left-content col">
                <h3 class="h3 pb-1 text-sm-start fw-bold">Hi Welcome to my hut</h3>
                <br />
                <span class="text-md-start">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Nihil cupiditate officiis ipsam placeat dolorum, modi non earum minima quis atque! Accusamus ratione impedit non eum. Eveniet molestiae
                  accusamus voluptas doloribus!</span>
                <!-- Button contact -->
                <div class="d-flex flex-row bd-highlight mb-3 pt-3">
                  <div class="p-2 bd-highlight">
                    <a href=""><button class="btn btn-dark rounded-pill">contact</button></a>
                  </div>
                  <div class="p-2 bd-highlight">
                    <a class="text-decoration-none text-black" href="">download CV <img src="assets/img/downloads (2).png" style="height: 30px" alt="download-image" /></a>
                  </div>
                </div>

                <!-- Button social media -->
                <div>
                  <div class="d-flex flex-row bd-highlight mb-3 pt-3">
                    <div class="p-2 bd-highlight">
                      <a href=""><button class="btn btn-light rounded-circle"><img src="assets/img/linkedin (2).png" style="height: 30px" alt="" /></button></a>
                    </div>
                    <div class="p-2 bd-highlight">
                      <a href=""><button class="btn btn-light rounded-circle"><img src="assets/img/instagram (2).png" style="height: 30px" alt="" /></button></a>
                    </div>
                    <div class="p-2 bd-highlight">
                      <a href=""><button class="btn btn-light rounded-circle"><img src="assets/img/twitter (2).png" style="height: 30px" alt="" /></button></a>
                    </div>
                    <div class="p-2 bd-highlight">
                      <a href=""><button class="btn btn-light rounded-circle"><img src="assets/img/facebook (2).png" style="height: 30px" alt="" /></button></a>
                    </div>
                  </div>
                </div>
              </div>
              <!-- Right content -->
              <div class="right-content d-flex justify-content-center col">
                <div class="margin-photo shadow p-3 mb-5 bg-body rounded">
                  <div class="image-photo">
                    <img class="photo-image rounded" src="assets/img/christian-buehner-DItYlc26zVI-unsplash.jpg" style="height: 200px" alt="" />
                  </div>
                  <div class="text-center">
                    <h3>Rhoma Irama</h3>
                    <span>Fullstack Developer</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section>
      <div class="my-project pt-5" style="background-color: white;">
        <h1 class="project-wlcm text-uppercase text-center fw-bold">my project</h1>
        <div class="container row p-5 px-5 justify-content-center m-5" id="container-id">
          {{#each data}}
            <div class="card shadow rounded mx-2 mt-5" style="width: 18rem">
              <img src="assets/uploads/{{this.image}}" class="card-img-top p-2" alt="..." />
              <div class="card-body">
                <a href="/detail-project/{{this.id}}" target="_blank" class="card-title">{{this.title}}</a>
                <p>durasi: {{this.start_date}} - {{this.end_date}}</p>
                <p class="card-text pb-2">{{this.duration}}</p>
                <p>ini nanti gambar checkbox</p>
                <p class="author">- {{this.author}}</p>
                <p>{{this.description}}</p>
                {{#if this.isLogin}}
                  <div class="container d-flex">
                    <a href="/project-page" class="button-edit btn btn-dark mx-3 px-4">edit</a>
                    <a href="/delete-project/{{id}}" class="button-delete btn btn-dark mx-2">delete</a>
                  </div>
                {{/if}}
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>