  </head>
  <body style="background-color: rgb(220, 224, 228)">
    <nav class="navbar px-5 navbar-expand-lg" style="background-color: rgb(244, 243, 243)">
      <div class="container-fluid gap-5">
        <a class="navbar-brand" href="#"><img src="/assets/img/dumbways-id-tangerang-logos-idycziPVBN-removebg-preview.png" alt="logo" style="height: 50px" /></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active home-btn" aria-current="page" href="/home"><button class="btn btn-light">Home</button></a>
            </li>
            <li class="nav-item">
              <a class="nav-link active project-btn" aria-current="page" href="/project-page"><button class="btn btn-light">Add Project</button></a>
            </li>
          </ul>
          <div class="right">
            <a href="/register"><button class="btn btn-light">Register</button></a>
            <a class="mx-5" href="/login"><button class="btn btn-light">Login</button></a>
            <a href="/contact-page"><button class="btn btn-dark">Contact Me</button></a>
          </div>
        </div>
      </div>
    </nav>

    <section>
      <div class="margin-contact m-5">
        <h1 class="text-center text-uppercase fw-bold pb-1">get in touch</h1>
        <form class="content-form d-flex col flex-column mx-5">
          <div class="d-flex align-items-center flex-column mb-3">
            <div class="name">
              <label class="pb-2 fw-bold"> Name </label><br />
              <input id="name" class="name-box shadow p-3 mb-4 bg-body rounded" type="text" />
            </div>

            <div class="email">
              <label class="pb-2 fw-bold">Email</label><br />
              <input id="email" class="email-box shadow p-3 mb-4 bg-body rounded" type="email" />
            </div>

            <div class="number">
              <label class="pb-2 fw-bold">Phone Number</label><br />
              <input id="phone" class="number-box shadow p-3 mb-4 bg-body rounded" type="text" />
            </div>

            <div class="subject">
              <label class="pb-2 fw-bold">Subject</label><br />
              <select id="subject" class="subject-box">
                <option></option>
                <option>Frontend Developer</option>
                <option>Backend Developer</option>
                <option>Fullstack Developer</option>
              </select>
            </div>

            <div class="massage pt-3">
              <label class="pb-2 fw-bold">Your Massage</label><br />
              <textarea id="massage" class="massage-box shadow p-3 mb-4 bg-body rounded"></textarea>
            </div>

            <div class="btn-submit d-flex justify-content-end">
              <button onclick="getData()" type="button" class="btn-submit rounded-pill btn btn-dark d-flex justify-content-end">submit</button>
            </div>
          </div>
        </form>
      </div>
    </section>

    <script src="assets/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
