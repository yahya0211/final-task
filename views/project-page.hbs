    <section>
      <div class="formulir-margin">
        <h1 class="title-text fw-bold text-uppercase mb-5 text-center">add my project</h1>
        <form class="content-form d-flex col flex-column mx-5" enctype="multipart/form-data" method="post" action="/project-page">
          <div class="d-flex align-items-center flex-column mb-3">
            <div class="project">
              <label class="pb-2 fw-bold"> Project Name </label><br />
              <input id="project-id" name="title" class="project-box shadow p-3 mb-4 bg-body rounded" type="text" />
            </div>

            <div class="date d-flex">
              <div class="start-date mx-2">
                <label class="pb-2 fw-bold">Start Date</label><br />
                <input type="date" name="startDate" id="date-start" class="input-start shadow p-3 mb-4 bg-body rounded" />
              </div>
              <div class="end-date">
                <label class="pb-2 fw-bold">End Date</label><br />
                <input type="date" name="endDate" id="date-end" class="input-end shadow p-3 mb-4 bg-body rounded" />
              </div>
            </div>

            <div class="description-box">
              <label class="pb-2 fw-bold">Description</label><br />
              <textarea id="desc" name="description" class="box-description shadow p-3 mb-4 bg-body rounded"></textarea>
            </div>

            <div class="tech-box d-flex justify-content-start row">
              <label class="pb-2 fw-bold">Tecnologies</label><br />
              <div class="tech-margin d-flex flex-wrap">
                <div class="checkbox-left d-flex flex-column mb-3">
                  <div class="node">
                    <input type="checkbox" name="nodejs" id="nodejs" value="jsnode" class="input-checkbox" />
                    <label>NodeJs</label>
                  </div>
                  <div class="react">
                    <input type="checkbox" name="reactjs" id="reactjs" value="jsreact" class="input-checkbox" />
                    <label>ReactJs</label>
                  </div>
                </div>

                <div class="checkbox-right d-flex flex-column mb-3">
                  <div class="next">
                    <input type="checkbox" name="nextjs" id="nextjs" value="jsnext" class="input-checkbox" />
                    <label>NextJs</label>
                  </div>

                  <div class="typescript">
                    <input type="checkbox" name="typescript" id="typescript" value="scripttype" class="input-checkbox" />
                    <label>TypeScript</label>
                  </div>
                </div>
              </div>
            </div>

            <div class="upload-image">
              <label class="pb-2 fw-bold">Upload Image</label><br />
              <input type="file" name="image" class="input-image shadow p-3 mb-4 bg-body rounded" />
            </div>

            <div class="btn-submit">
              <button class="btn-submit btn btn-dark rounded-pill">submit</button>
            </div>
          </div>
        </form>
      </div>
    </section>

